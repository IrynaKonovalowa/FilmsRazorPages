@page
@model FilmsRazorPages.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div style="background-color:antiquewhite; box-shadow: 0px 0px 20px darkorange inset; padding: 20px 20px 40px 20px">
<div class="name" style="margin-left: 45px;">Ajouter un film:</div>
    <div class="row film">
        <div class="col-md-4">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <hr />
                    <p style="margin-bottom: 5px;"><label asp-for="Film.Name" class="control-label"></label></p>
                    <input asp-for="Film.Name" name="Name" class="form-control" />
                    <span asp-validation-for="Film.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <p style="margin-bottom: 5px;"><label asp-for="Film.Genre" class="control-label"></label></p>
                    <input asp-for="Film.Genre" name="Genre" class="form-control" />
                    <span asp-validation-for="Film.Genre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <p style="margin-bottom: 5px;"><label asp-for="Film.Realisateur" class="control-label"></label></p>
                    <input asp-for="Film.Realisateur" name="Realisateur" class="form-control" />
                    <span asp-validation-for="Film.Realisateur" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <p style="margin-bottom: 5px;"><label asp-for="Film.Anne" class="control-label"></label></p>
                    <input asp-for="Film.Anne" name="Anne" class="form-control" />
                    <span asp-validation-for="Film.Anne" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <p style="margin-bottom: 5px;"><label asp-for="Film.Description" class="control-label"></label></p>
                    <input asp-for="Film.Description" name="Description" class="form-control" />
                    <span asp-validation-for="Film.Description" class="text-danger"></span>
                </div>
            <div class="form-group">
                    <p style="margin-bottom: 5px;"><label asp-for="Film.Poster" class="control-label"></label></p>
                    <input class="form-control" style="background-color:white; color: darkblue; border: 1px solid black;" type="file" name="uploadedFile" /><br>
                    <span asp-validation-for="Film.Poster" class="text-danger"></span>
            </div>
                <div style=" display:flex">
                    <div class=" but">

                        <input class="suppr" style="color: darkorange; border: 0px;" type="submit" value="Creer" />
                    </div>
                    <div class=" but">
                        <a asp-page="./Index" style="color:ghostwhite; text-decoration:none">Retour a la Liste</a>
                    </div>
                </div>
        </form>
    </div>
</div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
